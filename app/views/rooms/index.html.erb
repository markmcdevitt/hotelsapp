<h1>Listing rooms</h1>

<table  border = "3" style="width:100%" >
 
  <tr>
    <th>Hotel</th>
    <th>Category</th>
    <th>Price</th>
    <th>Extras</th>
    <th>Picture of the Room</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @rooms.each do |room| %>
  <tr>
    <td><%= room.hotel.name %></td>
    <td><%= room.category %></td>
    <td><%= room.price %></td>
    <td><%= room.extras %></td>
    <td><%= image_tag(room.roomImage , :size => "100x100")%></td>
    <td><%= link_to 'Show', room %></td>
	<% if asigned_in? %>
    <td><%= link_to 'Edit', edit_room_path(room) %></td>
    <td><%= link_to 'Destroy', room, confirm: 'Are you sure?', method: :delete %></td>
	<% end %>
  </tr> 
<% end %>
</table>
<%= link_to 'New Room', new_room_path %>
